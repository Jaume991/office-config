# This file has been auto-generated by i3-config-wizard(1).
# It will not be overwritten, so edit it as you like.
#
# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# windows
new_window pixel 2

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

focus_follows_mouse no

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master 5%+"
bindsym Shift+XF86AudioRaiseVolume exec "amixer -D pulse sset Master 1%+"
bindsym XF86AudioLowerVolume exec "amixer -D pulse sset Master 5%-"
bindsym Shift+XF86AudioLowerVolume exec "amixer -D pulse sset Master 1%-"
bindsym XF86AudioMute exec "amixer -D pulse sset Master toggle"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+v split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# WORKSPACE
set $wsLeft "Chrome"
set $wsMiddle "Mix"
set $wsRight "Spacemacs"
workspace $wsLeft output DVI-I-1
workspace $wsMiddle output DVI-D-0
workspace $wsRight output HDMI-0
bindsym $mod+1 workspace $wsLeft; workspace $wsRight; workspace $wsMiddle
bindsym $mod+shift+1 move to workspace $wsMiddle

set $wsLeft2 "Left 2"
set $wsMiddle2 "Middle 2"
set $wsRight2 "Right 2"
workspace $wsLeft2 output DVI-I-1
workspace $wsMiddle2 output DVI-D-0
workspace $wsRight2 output HDMI-0
bindsym $mod+2 workspace $wsLeft2; workspace $wsRight2; workspace $wsMiddle2
bindsym $mod+shift+2 move to workspace $wsMiddle2

set $wsLeft3 "Left 3"
set $wsMiddle3 "Middle 3"
set $wsRight3 "Right 3"
workspace $wsLeft3 output DVI-I-1
workspace $wsMiddle3 output DVI-D-0
workspace $wsRight3 output HDMI-0
bindsym $mod+3 workspace $wsLeft3; workspace $wsRight3; workspace $wsMiddle3
bindsym $mod+shift+3 move to workspace $wsMiddle3

# MENU
set $i3menu "i3: [b]buffer [c]onfig d[menu] [r]esize [s]ystem [w]indow"
set $configmenu "config: [w]acom"
set $resizemenu "resize: [h,j,k,l]"
set $runmenu "run: [c,C]hrome [e,E]client/daemon my[p]aint c[m]us"
set $systemmenu "system: re[b]oot [c]reload [l]ogout [p]oweroff [r]estart"
set $windowmenu "config: [h,j,k,l]focus [shift+h,j,k,l]move [f]ullscreen [r]esize [v]split [s,w,e]layout [q]uit"

mode $i3menu {
    bindsym d exec rofi -modi run -show; mode "default"
    bindsym b exec rofi -modi window -show; mode "default"

    ## MODES
    bindsym c mode $configmenu
    bindsym s mode $systemmenu
    bindsym r mode $runmenu
    bindsym w mode $windowmenu

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode $configmenu {
    bindsym w exec --no-startup-id xinput set-prop "Wacom Intuos PT S Pen stylus" --type=float "Coordinate Transformation Matrix" 0.390243902 0 0.390243902 0 0.5623 0 0 0 1; mode "default"
    bindsym c exec "emacsclient -c ~/office-config/"; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode $resizemenu {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode $runmenu {
    bindsym c exec "google-chrome"; mode "default"
    bindsym Shift+c exec "google-chrome --incognito"; mode "default"
    bindsym e exec "emacsclient -c"; mode "default"
    bindsym Shift+e exec "emacs --daemon"
    bindsym p exec "mypaint"; mode "default"
    bindsym m exec "gnome-terminal -e cmus"; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode $systemmenu {
    bindsym b exec reboot; mode "default"
    bindsym c reload; mode "default"
    bindsym l exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
    bindsym p exec shutdown -h now; mode "default"
    bindsym r restart; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode $windowmenu {
    bindsym h focus left
    bindsym j focus down
    bindsym k focus up
    bindsym l focus right

    bindsym Shift+h move left
    bindsym Shift+j move down
    bindsym Shift+k move up
    bindsym Shift+l move right

    bindsym v split toggle
    bindsym f fullscreen toggle

    bindsym s layout stacking
    bindsym w layout tabbed
    bindsym e layout toggle split

    #bindsym Shift+space floating toggle
    #bindsym $mod+space focus mode_toggle

    #bindsym $mod+a focus parent
    #rindsym $mod+d focus child

    bindsym q kill; mode "default"

    bindsym r mode $resizemenu 

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym Ctrl+space mode $i3menu

bar {
    status_command i3status
    tray_output primary
}
